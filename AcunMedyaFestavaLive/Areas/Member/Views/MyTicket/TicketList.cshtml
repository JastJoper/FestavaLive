@model List<AcunMedyaFestavaLive.Entities.Ticket>
@{
    ViewBag.Title = "TicketList";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSS Stilleri -->
    <style>
        .ticket-card {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 10px;
            margin-bottom: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease;
        }

            .ticket-card:hover {
                box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            }

            .ticket-card .ticket-image {
                max-width: 100px;
                max-height: 100px;
                border-radius: 5px;
                object-fit: cover;
            }
    </style>
</head>
<body>
    <div class="content">
        <div class="container-fluid">
            <h4 class="page-title">Bilet Bilgileri</h4>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Satışta ki Biletlerin Listesi</div>
                        </div>
                        <div class="card-body">
                            <div class="card-sub">
                                Bilet Bilgisi ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz
                            </div>
                            @foreach (var item in Model)
                            {
                                <div class="ticket-card">
                                    <div class="row align-items-center">
                                        <div class="col-md-2">
                                            <img src="https://www.kindpng.com/picc/m/362-3620307_general-admission-tickets-hd-png-download.png" alt="Bilet Resmi" class="ticket-image">
                                        </div>
                                        <div class="col-md-7">
                                            <h5>@item.Title</h5>
                                            <p>@item.Description</p>
                                        </div>
                                        <div class="col-md-3 text-right">
                                            <p>Fiyat: @item.Price</p>
                                            <a href="/Member/MyTicket/TicketDetail/@item.TicketID" class="btn btn-info">Detaylar</a>
                                        </div>
                                    </div>
                                </div>
                            }
                            <a href="/Member/MyTicket/BuyTicket/" class="btn btn-success">Satın Al</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
