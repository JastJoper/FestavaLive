@model List<AcunMedyaFestavaLive.Entities.Ticket>

@{
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bilet Bilgileri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Katılabileceğiniz Etkinlikler</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Bilet Alım-Satım ve Düzenleme Ekranı
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Bilet Türü</th>
                                    <th>Bilet Fiyatı</th>
                                    <th>Sil</th>
                                    <th>Güncelle</th>
                                    <th>Detaylar</th>
                                    <th>Ön İzleme</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.TicketID</td>
                                        <td>@item.Title</td>
                                        <td>@item.Price</td>
                                        <td><a href="/Admin/Ticket/DeleteTicket/@item.TicketID" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Admin/Ticket/UpdateTicket/@item.TicketID" class="btn btn-success">Güncelle</a></td>
                                        <td><a href="/Admin/Ticket/TicketDetail/@item.TicketID" class="btn btn-info">Detaylar</a></td>
                                        <td>
                                            @* Burada her bir TicketID için ayrı bir resim bağlantısı eklemek istiyorsanız: *@
                                            @if (item.TicketID == 2)
                                            {
                                                <img src="https://avatars.mds.yandex.net/get-sprav-products/5514775/2a00000181cecfe1302e9953681ef677ca04/medium" alt="Bilet Resmi 1" width="100" height="100">
                                            }
                                            else if (item.TicketID == 3)
                                            {
                                                <img src="https://i.pinimg.com/736x/34/95/84/349584d3210616615d458e32590e2759.jpg" alt="Bilet Resmi 2" width="100" height="100">
                                            }
                                            else if (item.TicketID == 4)
                                            {
                                                <img src="https://media.newstracklive.com/uploads/entertainment/hollywood-news/May/15/small_thumb/bnn_609f56a5b7f0e.jpeg" alt="Bilet Resmi 3" width="100" height="100">
                                            }
                                            else
                                            {
                                                <img src="https://art4life.uz/wp-content/uploads/2021/11/photo_2021-11-19_14-12-01-300x300.jpg" alt="Varsayılan Resim" width="100" height="100">
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/Ticket/CreateTicket/" class="btn btn-info">Yeni Bilet Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
